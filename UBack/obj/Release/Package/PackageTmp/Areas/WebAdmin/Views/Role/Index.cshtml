@{
    ViewBag.Title = "角色管理";
    Layout = "~/Areas/WebAdmin/Views/Shared/_LayoutBlank.cshtml";
}

<!-- 工具集 -->
<div class="my-btn-box btn">
    <span class="fl">
        <a class="layui-btn layui-btn-danger radius btn-delect" id="btn-delete-all">批量删除</a>
        <a class="layui-btn btn-add btn-default" id="btn-add">添加</a>
    </span>
    <div class="fr">
        <span class="layui-form-label">搜索条件：</span>
        <div class="layui-input-inline">
            <input type="text" autocomplete="off" placeholder="请输入搜索条件" class="layui-input">
        </div>
        <button class="layui-btn mgl-20">查询</button>
    </div>
</div>

<!-- 表格 -->
<div id="dataTable" lay-filter="dataTable"></div>

<!--弹层区域-->
<form class="layui-form" style="display:none; margin:10px 20px 0 -30px;" id="modules">
    <div class="layui-form-item">
        <label class="layui-form-label">输入框</label>
        <div class="layui-input-block">
            <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">选择框</label>
        <div class="layui-input-block">
            <select name="city" lay-verify="required">
                <option value=""></option>
                <option value="0">北京</option>
                <option value="1">上海</option>
                <option value="2">广州</option>
                <option value="3">深圳</option>
                <option value="4">杭州</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item layui-form-text">
        <label class="layui-form-label">文本域</label>
        <div class="layui-input-block">
            <textarea name="desc" placeholder="请输入内容" class="layui-textarea"></textarea>
        </div>
    </div>
</form>


<div id="menus">
    <form id="menuform"></form>
</div>

<script src="~/Scripts/layui/layui.js"></script>

<!--模板区域-->
<script type="text/html" id="moduleTpl">
    <a href="#" style="color:blue;" lay-event="showModules">查看</a>
</script>

<script type="text/html" id="menuTpl">
    <a href="#" style="color:blue;" lay-event="showMenus">查看</a>
</script>

<script type="text/html" id="statusTpl">
    {{#  if(d.status == 1){ }}
    有效
    {{#  } else { }}
    无效
    {{#  } }}
</script>

<!-- 表格操作按钮集 -->
<script type="text/html" id="barOption">
    <a class="layui-btn layui-btn-sm" lay-event="view">查看</a>
    <a class="layui-btn layui-btn-sm layui-btn-normal" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-sm layui-btn-danger" lay-event="del">删除</a>
</script>

<script type="text/javascript">

    // layui方法
    layui.use(['table', 'form', 'layer'], function () {
        // 操作对象
        var form = layui.form, table = layui.table, layer = layui.layer, $ = layui.jquery;

        // 表格渲染
        table.render({
            elem: '#dataTable',
            id: 'dataCheck',
            height: 460,
            url: '/api/role/getlist',
            limits: [10, 15, 20],
            limit: 10,
            page: true,
            loading: true,
            cols: [[
                { type: 'checkbox', checkbox: true, fixed: true, float: 'left' },
                { type: 'numbers', title: '序号' },
                { field: 'rolename', title: '角色名称' },
                { field: 'modules', title: '权限模块', templet: '#moduleTpl' },
                { field: 'menus', title: '权限按钮', templet: '#menuTpl' },
                { field: 'status', title: '状态', templet: '#statusTpl' },
                { fixed: 'right', title: '操作', align: 'center', toolbar: '#barOption' }
            ]],
            done: function (res, curr, count) {
                console.log(res);
            }
        });
        table.on('tool(dataTable)', function (obj) {
            var type = obj.event;
            active[type] ? active[type].call(this, obj) : '';
        });

        var active = {
            //查看权限模块
            view: function (obj) {
                var data = obj.data;

                $.getJSON("/api/role/getByID", { id: data.id }, function (d) {
                    //console.log(d.data[0].modules);
                })
            },
            //编辑权限模块
            edit: function (obj) {
                var data = obj.data;
                $.getJSON("/api/role/getByID", { id: data.id }, function (d) {
                    console.log(d.data[0].modules);
                })
            },
            //删除权限模块
            del: function (obj) {
                var data = obj.data;
                $.getJSON("/api/role/getByID", { id: data.id }, function (d) {
                    console.log(d.data[0].modules);
                })
            },
            showModules: function (obj) {
                $("#modules").show();
                var index = layer.open({
                    type: 1,
                    maxmin: true,
                    title: "模块",
                    area: ['600px', '400px'],
                    shadeClose: true,
                    btn: "关闭",
                    yes: function () {
                        setTimeout(function () {
                            layer.msg("保存成功");
                            $('form')[0].reset();
                            layer.close(index);
                        }, 3000);
                    },
                    btnAlign: "c",
                    content: $('#modules'),
                    end: function () {
                        console.log("cancle");
                        $("#modules").hide();
                        $('form')[0].reset();
                    }
                });
            },
            showMenus: function () {
                var index = layer.open({
                    type: 1,
                    maxmin: true,
                    title: "按钮",
                    area: ['600px', '400px'],
                    shadeClose: true,
                    btn: ["保存", "关闭"],
                    yes: function () {
                        console.log("执行保存的方法");
                        setTimeout(function () {
                            $('form')[0].reset();
                            layer.close(index);
                        }, 3000);
                    },
                    btn2: function () {
                        console.log("第二个按钮的回调函数");
                    },
                    btnAlign: "c",
                    closeBtn: 2,
                    content: $('#menus'),
                    cancel: function () {
                        console.log("cancle");
                        $('form')[0].reset();
                    }
                });
            }
        };
    });
</script>
